<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.example.thindie.presentation.ChoseLevelFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:layout_marginTop="60dp"
        android:id="@+id/bu_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="test"
        android:textStyle="bold"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/bu_easy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#66BB6A"
        app:layout_constraintTop_toBottomOf="@id/bu_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="easy"
        android:textStyle="bold"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/bu_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFCA28"
        app:layout_constraintTop_toBottomOf="@id/bu_easy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="normal"
        android:textStyle="bold"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/bu_hard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EF5350"
        app:layout_constraintTop_toBottomOf="@id/bu_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="hard"
        android:textStyle="bold"
        android:textSize="24sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>